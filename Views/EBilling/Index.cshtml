@model IEnumerable<EBilling.Models.BillDetail>
@{
    ViewBag.Title = "E-Bill";
}

 <div class="container shadow rounded mt-4" >
     <div class="row">
         <div class="col-12">
         <h4>All Bills</h4>
         <table class="table table-responsive table-striped table-hover table-bordered ">
             <thead>
                 <tr>
                     <th>Id</th>
                     <th>coustomer Name</th>
                     <th>Mobile Number</th>
                     <th>Address</th>
                     <th>Total Amount</th>
                     <th></th>
                 </tr>
                
             </thead>
             <tbody>
               @foreach(var item in Model)
                {
                  <tr>
                    <td>@item.Id</td>
                    <td>@item.CoustomerName</td>
                    <td>@item.MobileNumber</td>
                    <td>@item.Address</td>
                    <td>@item.TotalAmount</td>
                    <td>
                        @Html.ActionLink("View", "ViewBill", "EBilling", new {Id=@item.Id}, new {@class="btn btn-sm btn-light border"})
                    </td>
                </tr>
               }
             </tbody>
         </table> 
         </div>
     </div>
 </div>

